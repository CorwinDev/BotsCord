<%- include('../includes/header.ejs', { title: server.name}) %>

    <br><br><br><br><br>
    <div class="flex space-x-4 py-2 lg:h-5/6 sm:min-h-min">
        <div class="p-10 bg-blue-color w-2/3 text-white h-full m-4 mx-14">
            <%= server.description %>

        </div>
        <div class="bg-blue-color w-1/3 p-10 text-white h-full m-4 text-center">
            <h1 class="text-3xl">
                <%= server.name %>
            </h1>
            <!-- owners -->
            <a href="/server/<%= server.id %>/join" class="btn btn-BotsCord float-right" data-tooltip title="Join the server" data-placement="auto"><i class="fa fa-link"></i>
                Join</a>
            <% if(user) { if(serverr.members.cache.get(user.id)) {
                if(serverr.members.cache.get(user.id).permissions.has('ADMINISTRATOR')) { %>
                <div class="h6 mt-4">
                    <i class="fa fa-user-crown"></i> Owner Options
                </div>
                <a href="/server/<%= server.id %>/edit" class="mt-1">
                    <div class="box-2-p"><i class="mt-1 fa fa-pencil"></i></div>
                    <p class="box-2">Edit Server</p>
                </a>
                <% } } } %>
                    <h6 class="text-xl mt-4">
                        <i class="fa fa-question-circle"></i> 
                        <p>Information</p>
                    </h6>
                    <div class="mt-1">
                        <div class="box-2-p"><i class="mt-1 fa fa-users"></i></div>
                        <p class="box-2">Members:&nbsp;<%= serverr.memberCount.toLocaleString().replace(',', '.' ) %>
                        </p>
                    </div>
                    <div class="mt-1">
                        <div class="box-2-p"><i class="mt-1 fa fa-robot"></i></div>
                        <p class="box-2">Bots:&nbsp;<%= serverr.members.cache.filter(a=> a.user.bot).size %>
                        </p>
                    </div>
                    <div class="mt-1">
                        <div class="box-2-p"><i class="mt-1 fa fa-icons"></i></div>
                        <p class="box-2">Emoji:&nbsp;<%= serverr.emojis.cache.size || "0" %>
                        </p>
                    </div>
                    <div class="mt-1">
                        <div class="box-2-p"><i class="mt-1 fa fa-user"></i></div>
                        <p class="box-2">Role Count:&nbsp;<%= serverr.roles.cache.size || "0" %>
                        </p>
                    </div>
                    <div class="mt-1">
                        <div class="box-2-p"><i class="mt-1 fa fa-diamond"></i></div>
                        <p class="box-2">Boost Level:&nbsp;<%= serverr.premiumTier || "0" %>
                        </p>
                    </div>
                    <div class="h6 mt-4">
                        <i class="fa fa-user-crown"></i> Owners
                    </div>
                    <% serverr.members.cache.filter(a=> !a.user.bot && a.permissions.has('ADMINISTRATOR')).map(admin =>{
                        %>
                        <a style="text-decoration: none;margin-bottom: -5px;" href="/user/<%= admin.user.id %>"
                            class="flex mt-1">
                            <div class="h-5 w-5 rounded-lg"
                                style="background: url(<%= admin.user.avatarURL({dynamic:true}) || '../../img/undefined_avatar.png' %>) center center no-repeat; background-size: 100%;">
                            </div>
                            <p translate="no" class="box-2">
                                <%= admin.user.tag %>
                                    <% if(admin.user.id===serverr.ownerID) { %>
                                        &nbsp;<span data-toggle="tooltip" title="Join the server"><i
                                                class="fa fa-crown has-text-warning"></i></span>
                                        <% } %>
                            </p>
                        </a>
                        <% }) %>

        </div>
    </div>
    <br><br><br>

